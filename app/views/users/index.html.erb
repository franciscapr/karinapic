<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<% @users.each do |user| %>
  <div>
    <% if user.profile_picture.attached? %>
      <%= image_tag url_for(user.profile_picture), class: "profile-picture" %>
    <% else %>
      <%= image_tag "default_profile_picture.png", class: "profile-picture" %>
    <% end %>
    <h3><%= user.name %></h3>
    <!-- Otros detalles del usuario que quieras mostrar en el Ã­ndice -->
  </div>
<% end %>
